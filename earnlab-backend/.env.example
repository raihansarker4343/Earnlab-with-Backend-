# Database connection string
DATABASE_URL=postgres://username:password@host:port/dbname

# Auth and security
JWT_SECRET=replace-with-secure-random-secret
POSTBACK_SECRET=replace-with-postback-secret

# Optional IPHub key (if you use IP reputation)
IPHUB_API_KEY=your-iphub-api-key

# Email delivery (Esend/Resend)
ESEND_API_KEY=your-esend-or-resend-api-key
EMAIL_FROM=verified-sender@example.com

# Frontend URL used for password reset links
FRONTEND_URL=http://localhost:5173

# Server port
PORT=4000
